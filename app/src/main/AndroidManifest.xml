<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.simplepass.curriculo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_resume2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_projects"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.ProjectsActivity"
            android:label="@string/title_activity_projects"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.ColoredNavigation" />
        <activity
            android:name=".activity.PersonalInfoActivity"
            android:label="@string/title_activity_personal_info"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.ColoredNavigation" />
        <activity
            android:name=".activity.AcademicActivity"
            android:label="@string/title_activity_academic"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.ColoredNavigation" />
        <activity
            android:name=".activity.ToolsActivity"
            android:label="@string/title_activity_tools"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.ColoredNavigation" />
        <activity
            android:name=".activity.RxActivity"
            android:label="@string/title_activity_rx"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>